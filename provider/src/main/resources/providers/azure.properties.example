# Azure OpenAI提供商配置示例
# 将此文件复制为 azure.properties 并修改为你的实际配置

# 基础配置
provider=azure
model.name=gpt-4
api.key=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
api.endpoint=https://{your-resource-name}.openai.azure.com/openai/deployments/{deployment-id}/chat/completions?api-version=2023-07-01-preview

# Azure特有配置
resource.name=your-resource-name
deployment.id=your-deployment-id
api.version=2023-07-01-preview

# 高级配置
timeout=30000
max.retries=3
retry.delay=1000

# 模型特定配置
model.temperature=0.7
model.max.tokens=2048
model.top.p=0.95
model.stop.sequences=["User:", "Assistant:"]
model.frequency.penalty=0.0
model.presence.penalty=0.0

# 区域配置
region=eastus

# 使用Azure AD身份验证 (可选)
#use.azure.ad=true
#azure.ad.tenant.id=your-tenant-id
#azure.ad.client.id=your-client-id
#azure.ad.client.secret=your-client-secret 